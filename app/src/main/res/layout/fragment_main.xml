<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_white"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_fragmentMain_linear"
        android:text="@string/linearlayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_fragmentMain_grid"
        android:text="@string/gridlayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_fragmentMain_staggered"
        android:text="@string/staggeredlayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>