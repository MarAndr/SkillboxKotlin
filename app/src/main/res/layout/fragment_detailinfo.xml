<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginTop="300dp"
        android:id="@+id/tv_detailInfoFragment_national"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nationality: "
        app:layout_constraintBottom_toTopOf="@+id/tv_detailInfoFragment_martialSt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_detailInfoFragment_martialSt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marital status: "
        app:layout_constraintBottom_toTopOf="@+id/tv_detailInfoFragment_favoriteBus"
        app:layout_constraintStart_toStartOf="@+id/tv_detailInfoFragment_national"
        app:layout_constraintTop_toBottomOf="@+id/tv_detailInfoFragment_national"
       />

    <TextView
        android:id="@+id/tv_detailInfoFragment_favoriteBus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorite business: "
        app:layout_constraintBottom_toTopOf="@+id/tv_detailInfoFragment_phoneNum"
        app:layout_constraintStart_toStartOf="@id/tv_detailInfoFragment_martialSt"
        app:layout_constraintTop_toBottomOf="@+id/tv_detailInfoFragment_martialSt"
       />

    <TextView
        android:id="@+id/tv_detailInfoFragment_phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone number: "
        app:layout_constraintStart_toStartOf="@+id/tv_detailInfoFragment_favoriteBus"
        app:layout_constraintTop_toBottomOf="@+id/tv_detailInfoFragment_favoriteBus"
         />

</androidx.constraintlayout.widget.ConstraintLayout>