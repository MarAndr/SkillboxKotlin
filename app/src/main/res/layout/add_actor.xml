<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/tvName_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="Add name:"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
         />

    <EditText
        android:id="@+id/etName_dialogFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="name"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/tvName_dialog"
        app:layout_constraintTop_toBottomOf="@id/tvName_dialog" />

    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/tvAge_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add age:"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@id/tvName_dialog"
        app:layout_constraintTop_toBottomOf="@id/etName_dialogFragment" />

    <EditText
        android:id="@+id/etAge_dialogFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="age"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/tvAge_dialog"
        app:layout_constraintTop_toBottomOf="@id/tvAge_dialog" />

    <Switch
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:id="@+id/switchAcademyAward_dialogFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Academy Award"
        app:layout_constraintStart_toStartOf="@+id/etAge_dialogFragment"
        app:layout_constraintTop_toBottomOf="@+id/etAge_dialogFragment" />


</androidx.constraintlayout.widget.ConstraintLayout>