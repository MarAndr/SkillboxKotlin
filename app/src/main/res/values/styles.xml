<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:listDivider">@drawable/divider</item>
  </style>

  <style name="ButtonStyle">
    <item name="android:background">@color/buttonBG</item>
  </style>

  <style name="TextStyleHeader1">
    <item name="android:layout_width">250dp</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textAlignment">center</item>
    <item name="android:fontFamily">sans-serif-condensed-medium</item>
  </style>

  <style name="TextStyleHeader2" parent="TextStyleHeader1">
    <item name="android:textSize">15sp</item>
  </style>

  <style name="TextStyleTime" parent="TextStyleHeader1">
    <item name="android:textSize">10sp</item>
    <item name="android:layout_margin">5dp</item>
    <item name="fontFamily">sans-serif</item>
  </style>

  <style name="TextDetailStyle">
    <item name="android:textSize">10sp</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="ToolBarStyle">
    <item name="android:background">@color/toolbar</item>
    <item name="android:theme">@style/ToolBarTheme</item>
    <item name="android:elevation">8dp</item>
  </style>

  <style name="ToolBarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
    <item name="toolbarNavigationButtonStyle">@style/ToolBarNavigationStyle</item>
  </style>

  <style name="ToolBarNavigationStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
    <item name="tint">@android:color/black</item>
  </style>


</resources>